!!!
%html.mdl-js{lang: "en"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{content: "width=device-width, initial-scale=1, shrink-to-fit=no", name: "viewport"}/
    %link{href: "assets/favicon.ico", rel: "icon"}/
    %link{href: "assets/css/bootstrap.min.css", rel: "stylesheet"}/
    %link{href: "assets/css/styles.css", rel: "stylesheet"}/
    %script{src: "assets/js/jquery.min.js"}
    %script{src: "assets/js/bootstrap.min.js"}
    %title
      = I18n.t('name')
  %body
    %section#introduction
      .container
        .row.fill-viewport.align-items-center.justify-content-center
          .col-12.col-md-6
            .row
              .col-md-auto
                %h1.text-white.title.inline-block
                  = I18n.t('title')
            .row
              .col.button
                %button.btn.btn-primary{disabled: "disabled", type: "button"}
                  = I18n.t('stats.field.level')
                  %span.badge.badge-light
                    = Game::DIFFICULTY.keys[@game.user.difficulty]
                %button.btn.btn-primary{disabled: "disabled", type: "button"}
                  = I18n.t('stats.field.attempts')
                  %span.badge.badge-light
                    = @game.user.attempts_used
                    = '/'
                    = @game.user.attempts_total
                %button.btn.btn-primary{disabled: "disabled", type: "button"}
                  = I18n.t('stats.field.hints')
                  %span.badge.badge-light
                    = @game.user.hints_used
                    = '/'
                    = @game.user.hints_total
            %hr.mb-4/
            .row
              .text-center
                .text-center
                  %h3.text-white
                    = "Congratulations, #{@game.user.name}! You won the game!"
                %img.img-fluid{alt: "You won the game!", src: "assets/images/won.gif"}/
            %hr.mb-4/
            %a.btn.btn-primary.btn-lg{href: "/", role: "button"}
              = I18n.t('button.play_again')
            %a.btn.btn-success.btn-lg.float-right{href: "/statistics", role: "button"}
              = I18n.t('button.statistics')